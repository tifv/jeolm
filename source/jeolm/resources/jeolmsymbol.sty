% \begin{macro}{\geq}
% \begin{macro}{\leq}
% Redefine |\geq| as |\geqslant| and |\leq| as |\leqslant| for the Russian language.
%    \begin{macrocode}
\def\switch@ineq@slant{%
    \unless\ifdefined\geq@straight%
        \let\geq@straight\geq\let\leq@straight\leq \fi
    \let\geq\geqslant\let\leq\leqslant
}
\def\switch@ineq@straight{%
    \ifdefined\geq@straight \let\geq\geq@straight\let\leq\leq@straight \fi
}
\gappto\blockextras@russian{\switch@ineq@slant}
\gappto\inlineextras@russian{\switch@ineq@slant}
\gappto\extrasrussian{\switch@ineq@slant}
\gappto\noextras@russian{\switch@ineq@straight}

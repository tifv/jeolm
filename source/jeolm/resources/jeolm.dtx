% \begin{macro}{\resetsubproblem}
% Underlying counter for |\subproblem| and friends.
%    \begin{macrocode}
\newcounter{jeolmsubproblem}
\newcommand\resetsubproblem{\setcounter{jeolmsubproblem}{0}}
\newcommand\subproblem@numbering{\alph}
%    \end{macrocode}

%    \begin{macrocode}
\newcommand\problem{\problemx{}}
\newcommand\problemx[1]{\stepcounter{jeolmproblem}%
    \problemyx{\problem@numbering{jeolmproblem}}{#1}}
\newcommand\problemy[1]{\problemyx{#1}{}}
\newcommand\problemyx[2]{\problem@yx{#1}{#2}\problem@space}
